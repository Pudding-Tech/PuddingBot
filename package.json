{
  "name": "PuddingBot",
  "version": "1.3.0",
  "description": "PuddingBot serves the discord server Puddings",
  "scripts": {
    "build": "tsc --project ./",
    "start": "npx ts-node src/index.ts",
    "startbuild": "node build/index.js",
    "dev": "npx nodemon src/index.ts",
    "dev2": "concurrently \"tsc -w\" \"npx nodemon build/index.js\""
  },
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/rest": "^1.4.0",
    "@discordjs/voice": "^0.14.0",
    "discord-api-types": "^0.37.20",
    "discord-player": "^5.3.2",
    "discord.js": "^14.7.1",
    "dotenv": "^16.0.3",
    "ffmpeg-static": "^5.1.0",
    "node-cron": "^3.0.2",
    "plex-api": "^5.3.2",
    "simple-data-storage": "^1.0.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/node": "^18.11.10",
    "@types/node-cron": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
