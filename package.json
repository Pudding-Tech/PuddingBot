{
  "name": "pudding-bot",
  "version": "0.1.0",
  "description": "PuddingBot serves the discord server Puddings",
  "scripts": {
    "build": "tsc --project ./",
    "start": "cross-env NODE_ENV=prod npx ts-node src/index.ts",
    "startbuild": "cross-env NODE_ENV=prod node build/index.js",
    "dev": "cross-env NODE_ENV=dev npx nodemon src/index.ts",
    "dev2": "concurrently \"tsc -w\" \"cross-env NODE_ENV=dev npx nodemon build/index.js\""
  },
  "dependencies": {
    "@discordjs/opus": "^0.8.0",
    "@discordjs/rest": "^0.5.0",
    "@discordjs/voice": "^0.10.0",
    "axios": "^0.27.2",
    "discord-api-types": "^0.33.5",
    "discord-player": "^5.2.2",
    "discord.js": "^13.8.1",
    "dotenv": "^16.0.1",
    "ffmpeg-static": "^5.0.2",
    "node-cron": "^3.0.1",
    "plex-api": "^5.3.2",
    "simple-data-storage": "^1.0.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.18.0",
    "nodemon": "^2.0.18",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  }
}
